<div class="ui container">
    <div class="ui">
        <div class="ui menu">
            <div class="header item">
                <%= link_to 'Chatroom', root_path %>
            </div>

            <% if logged_in? %>

            <div class="item">
                <%= link_to 'Log out', logout_path, method: :delete %>
            </div>
            <div class="item">

                Currently logged in as <%= current_user.username %>

            </div>

            <% end %>

            <% if !logged_in? %>

            <div class="item">
                <%= link_to 'Sign up' %>
            </div>

            <div class="item">
                <%= link_to 'Login', login_path %>
            </div>

            <% end %>
        </div>
    </div>
</div>